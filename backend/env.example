# ==============================================================================
# POISSON AI — Environment Variable Template
# ==============================================================================
# INSTRUCTIONS:
#   1. Copy this file: cp env.example environment.env
#   2. Fill in every value — do NOT leave placeholders
#   3. NEVER commit environment.env to Git
# ==============================================================================

# ==============================================================================
# SECURITY (required)
# ==============================================================================

# Generate: python3 -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=your_jwt_secret_key_min_64_chars_here
JWT_EXPIRE_HOURS=24
SECRET_KEY=your_secret_key_here

# ==============================================================================
# ENVIRONMENT
# ==============================================================================

ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# ==============================================================================
# API KEYS (required for full functionality)
# ==============================================================================

# U.S. Senate LDA — https://lda.senate.gov/api/
LDA_API_KEY=your_senate_lda_api_key_here

# Federal Election Commission — https://api.open.fec.gov/developers/
FEC_API_KEY=your_fec_api_key_here

# NYC Open Data / Socrata — https://dev.socrata.com/
SOCRATA_API_KEY_ID=your_socrata_api_key_id_here
SOCRATA_API_KEY_SECRET=your_socrata_api_key_secret_here
SOCRATA_APP_TOKEN=your_socrata_app_token_here

# ==============================================================================
# DATABASE
# ==============================================================================

# Leave commented for SQLite (local dev). Set for Postgres (production).
# DATABASE_URL=postgresql://user:password@host:5432/dbname
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ==============================================================================
# REDIS
# ==============================================================================

REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600

# ==============================================================================
# NETWORK / CORS
# ==============================================================================

API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ==============================================================================
# RATE LIMITING
# ==============================================================================

IP_RATE_LIMIT_PER_MINUTE=60
GUEST_REQUESTS_PER_HOUR=50
GUEST_REQUESTS_PER_DAY=200
REGISTERED_REQUESTS_PER_HOUR=200
REGISTERED_REQUESTS_PER_DAY=1000
PREMIUM_REQUESTS_PER_HOUR=1000
PREMIUM_REQUESTS_PER_DAY=10000

# ==============================================================================
# SEARCH & PERFORMANCE
# ==============================================================================

MAX_RESULTS_PER_SOURCE=50
MAX_SEARCH_TIMEOUT=30
ENABLE_SEARCH_HISTORY=true
DEFAULT_SEARCH_LIMIT=50
REQUEST_TIMEOUT=30

SENATE_LDA_RATE_LIMIT=0.25
CHECKBOOK_RATE_LIMIT=0.5
NYS_ETHICS_RATE_LIMIT=1.0
NYC_LOBBYIST_RATE_LIMIT=1.0
FEC_RATE_LIMIT=0.28

HTTP_TIMEOUT_CONNECT=10
HTTP_TIMEOUT_READ=30
HTTP_POOL_CONNECTIONS=10
HTTP_POOL_MAXSIZE=20

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================

ENABLE_CHECKBOOK=true
ENABLE_NYS_ETHICS=true
ENABLE_SENATE_LDA=true
ENABLE_NYC_LOBBYIST=true
