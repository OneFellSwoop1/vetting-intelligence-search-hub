# ==============================================================================
# POISSON AI — Root Environment Variable Template
# ==============================================================================
# Backend env file: backend/env.example → backend/environment.env
# This root file documents all variables for reference and Render/Vercel setup.
# ==============================================================================

# ==============================================================================
# SECURITY
# ==============================================================================

# Generate: python3 -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=your_jwt_secret_key_min_64_chars_here
JWT_EXPIRE_HOURS=24
SECRET_KEY=your_secret_key_here

# ==============================================================================
# API KEYS
# ==============================================================================

# U.S. Senate LDA — https://lda.senate.gov/api/
LDA_API_KEY=your_senate_lda_api_key_here

# Federal Election Commission — https://api.open.fec.gov/developers/
FEC_API_KEY=your_fec_api_key_here

# NYC Open Data / Socrata — https://dev.socrata.com/
SOCRATA_API_KEY_ID=your_socrata_api_key_id_here
SOCRATA_API_KEY_SECRET=your_socrata_api_key_secret_here
SOCRATA_APP_TOKEN=your_socrata_app_token_here

# ==============================================================================
# DATABASE (Render Postgres URL in production)
# ==============================================================================

DATABASE_URL=postgresql://user:password@host:5432/dbname

# ==============================================================================
# REDIS (Render Redis URL in production)
# ==============================================================================

REDIS_URL=redis://localhost:6379/0

# ==============================================================================
# CORS
# ==============================================================================

CORS_ORIGINS=https://poisson-ai.com,https://www.poisson-ai.com,http://localhost:3000

# ==============================================================================
# CLERK (Frontend — set in Vercel environment variables)
# ==============================================================================

NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_live_your_clerk_secret_key_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/app
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/app

# ==============================================================================
# NEXT.JS (Frontend — set in Vercel environment variables)
# ==============================================================================

NEXT_PUBLIC_API_URL=https://api.poisson-ai.com
NEXT_PUBLIC_SITE_URL=https://poisson-ai.com
